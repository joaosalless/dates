#!/usr/bin/env php
<?php

declare(strict_types=1);

require __DIR__.'/../vendor/autoload.php';

use Joaosalless\Dates\Console\Command\GetCommemorativeDatesCommand;
use Joaosalless\Dates\Console\Command\GetHolidaysCommand;
use Joaosalless\Dates\Console\Command\GetWorkDateCommand;
use Joaosalless\Dates\Console\Command\Sync\SyncEventsCommand;
use Symfony\Component\Console\Application;

$command = new GetHolidaysCommand();
$application = new Application();
$application->add($command);
$application->add(new GetCommemorativeDatesCommand());
$application->add(new GetWorkDateCommand());
$application->add(new SyncEventsCommand());
$application->run();
